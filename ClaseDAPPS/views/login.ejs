<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/loginTW.css" />
        <script src="/sweetalert2/sweetalert2.all.js"></script>
    </head>
    <body
        class=" flex bg-repeat bg-fixed bg-cover bg-top bg-[url('/images/adminFondo.jpg')] items-center justify-center overflow-hidden">
        <main 
            class="bg-stone-800/90 drop-shadow-xl
            flex flex-col items-center justify-center gap-4 p-[2dvw] pb-[3dvh] w-[20rem] h-max rounded-lg overflow-hidden absolute top-[25%]">
            <span
                class="bg-[url('/icons/User.svg')] bg-cover bg-no-repeat object-fill w-[10rem] h-[10rem] invert"></span>
            <label class="text-[1.5rem] text-gray-200 font-Montserrat font-semibold">Bienvenido</label>
            <form
                id="form"
                action="/Auth/login"
                method="post"
                class="flex flex-col items-center justify-center gap-4 font-Montserrat">
                <button 
                    class="py-2 px-4 bg-red-900 text-gray-300 rounded font-Montserrat my-4 hover:scale-105 hover:bg-red-700 transition-all"
                    id="btnlogin" type="button">
                    Conectar a MetaMask
                </button>
            </form>
        </main>
    <script>
document.getElementById('btnlogin').addEventListener('click', async () => {
    if (!window.ethereum) {
        Swal.fire({
            icon: 'warning',
            title: 'MetaMask no detectado',
            text: 'Instala MetaMask para continuar.',
        });
        return;
    }

    try {
        const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
        const wallet = accounts[0];

        const res = await fetch('/login', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ wallet })
        });

        const data = await res.json();

        if (!res.ok || data.error) {
            Swal.fire({
                icon: 'error',
                title: 'Acceso denegado',
                text: data.error,
            });
            return;
        }

        Swal.fire({
            icon: 'success',
            title: 'Bienvenido',
            text: 'Accediendo...',
            timer: 1500,
            showConfirmButton: false,
        });

        setTimeout(() => window.location.href = data.redirect, 1500);

    } catch (e) {
        console.error(e);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Hubo un problema conectando MetaMask.',
        });
    }
});
    </script>
    </body>
</html>
